<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DistributorActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_menu_distributor_header"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#082F59"
            android:gravity="center_horizontal|center_vertical"
            android:text="MENU DISTRIBUIDOR"
            android:textColor="#FFFFFF"
            android:textColorLink="#0F2983"
            android:textStyle="bold"
            android:padding="20dp"/>

        <Button
            android:id="@+id/bRegistrarDespacho"
            android:layout_below="@+id/lbl_menu_distributor_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:drawableLeft="@android:drawable/ic_menu_save"
            style="@style/Widget.AppCompat.Button"
            android:text="Registrar Despacho"
            android:background="#125EAF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:onClick="DepartureRegisterActivity"
            />

        <Button
            android:id="@+id/bAyuda"
            android:layout_below="@+id/bRegistrarDespacho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:drawableLeft="@android:drawable/ic_menu_help"
            style="@style/Widget.AppCompat.Button"
            android:text="Ayuda"
            android:background="#125EAF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:onClick="HelpActivity"
            />

        <Button
            android:id="@+id/bCambiarContrasena"
            android:layout_below="@+id/bAyuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:drawableLeft="@android:drawable/ic_menu_upload_you_tube"
            style="@style/Widget.AppCompat.Button"
            android:text="Cambiar Contrasena"
            android:background="#125EAF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:onClick="PasswordChangeActivity"
            />

        <Button
            android:id="@+id/bSalir3"
            android:layout_below="@+id/bCambiarContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
            style="@style/Widget.AppCompat.Button"
            android:text="Salir"
            android:background="#125EAF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:onClick="DistributorLogout"
            />

    </RelativeLayout>

</ScrollView>