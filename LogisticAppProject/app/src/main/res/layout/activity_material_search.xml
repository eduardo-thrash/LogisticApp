<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaterialSearchActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/materials_header"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#082F59"
            android:gravity="center_horizontal|center_vertical"
            android:text="MATERIALES"
            android:textColor="#FFFFFF"
            android:textColorLink="#0F2983"
            android:textStyle="bold"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/lbl_materials_site_title"
            android:layout_below="@+id/materials_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Sede"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_materials_site_description"
            android:layout_below="@+id/lbl_materials_site_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:hint="nombre sitio"
            />

        <TextView
            android:id="@+id/lbl_materials_delegate_title"
            android:layout_below="@+id/txt_materials_site_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Delegado"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_materials_delegate_description"
            android:layout_below="@+id/lbl_materials_delegate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Nombre delegado"
            />

        <ListView
            android:id="@+id/lvw_material_list"
            android:layout_below="@+id/txt_materials_delegate_description"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="30dp"
            android:background="#E0E5EA">
        </ListView>

    </RelativeLayout>

</ScrollView>