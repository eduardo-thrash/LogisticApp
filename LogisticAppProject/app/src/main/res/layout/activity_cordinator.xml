<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CordinatorActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_coordinator_menu_title"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#082F59"
            android:gravity="center_horizontal|center_vertical"
            android:text="COORDINADOR"
            android:textColor="#FFFFFF"
            android:textColorLink="#0F2983"
            android:textStyle="bold"
            android:padding="20dp"/>

        <Button
            android:id="@+id/btn_coordinator_site_search_option"
            android:layout_below="@+id/lbl_coordinator_menu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:background="#125EAF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:drawableLeft="@android:drawable/ic_menu_set_as"
            android:text="CONSULTAR SITIO"
            android:onClick="SiteSearchActivity"
            />

        <Button
            android:id="@+id/btn_coordinator_help_option"
            android:layout_below="@+id/btn_coordinator_site_search_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:background="#125EAF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:drawableLeft="@android:drawable/checkbox_on_background"
            android:text="AYUDA"
            android:onClick="HelpActivity"
            />

        <Button
            android:id="@+id/btn_coordinator_change_password_option"
            android:layout_below="@+id/btn_coordinator_help_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:background="#125EAF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:drawableLeft="@android:drawable/checkbox_on_background"
            android:text="CAMBIAR CONTRASEÃ‘A"
            android:onClick="PasswordChangeActivity"/>

        <Button
            android:id="@+id/btn_coordinator_close_session_option"
            android:layout_below="@+id/btn_coordinator_change_password_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="#125EAF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:drawableLeft="@android:drawable/checkbox_on_background"
            android:text="SALIR"
            android:onClick="CoordinatorLogout"/>

    </RelativeLayout>

</ScrollView>